<h1>Listing Posts</h1>

<div class="head-name">Sean Sullivan</div>
<div class="menu-border">|</div>

<% @posts.each do |post| %>
<div class="post-link">
  <div class="post-link-date"><%= post.created_at.strftime("%Y %B") %></div>
  <div class="post-link-title"><%= link_to post.title, post_path(post) %></div>
</div>
<% end %>
